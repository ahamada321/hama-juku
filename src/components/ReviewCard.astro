---
export interface ReviewCardProps {
  name: string;
  role: string;
  imageSrc: string;
  review: string;
  rating: number;
}

interface ReviewCardData {
  review: ReviewCardProps;
}

const { review } = Astro.props as ReviewCardData;
---

<div class="w-72 h-56 bg-white border border-black/10 rounded-3xl p-4 flex flex-col justify-between relative">
  <div>
    <div class="flex items-center mb-3">
      <div class="w-10 h-10 rounded-full overflow-hidden mr-3">
        <img src={review.imageSrc} alt={review.name} class="w-full h-full object-cover" />
      </div>
      <div>
        <h4 class="text-md font-semibold text-gray-800">{review.name}</h4>
        <p class="text-gray-500 font-heading text-xs">{review.role}</p>
      </div>
    </div>
    <div class="flex items-center gap-1 mb-1">
      {Array(review.rating)
        .fill(0)
        .map(() => (
          <i class="icon-svg icon-star"></i>
        ))}
    </div>
    <p class="text-gray-600 text-sm italic">{review.review}</p>
  </div>
</div>