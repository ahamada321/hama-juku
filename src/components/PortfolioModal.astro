---
export interface PortfolioModalProps {
  id: number;
  title: string;
  srcImg: string;
  caseStudy: string;
}

interface ModalProps {
  modal: PortfolioModalProps;
}

const { modal } = Astro.props as ModalProps;
---

<div id={`modal${modal.id}`} class="modal">
  <div class="relative modal-content">
    <span
      class="absolute end-1 top-1 close text-3xl cursor-pointer"
      onclick={`PortfolioModule.closeModal(${modal.id})`}
    >Ã—</span>
    <img src={modal.srcImg} alt={modal.title} class="w-full" />
    <div class="pt-6 px-6">
      <h2 class="text-2xl md:text-3xl font-medium text-black">
        {modal.title} - Case Study
      </h2>
    </div>
    <div class="post-content py-4 px-6" set:html={modal.caseStudy} />
  </div>
</div>