---
interface ContactDetail {
  title: string;
  content: string;
  icon: string;
  link?: string;
}

interface Props {
  formTitle?: string;
}
---

<section id="contact-me" class="relative bg-white py-16 md:py-20 overflow-hidden">
  <div class="max-w-4xl mx-auto px-6 lg:px-11">
    <div class="flex flex-col gap-6">
      <!-- Contact Form -->
        <form action="/contact-success" method="POST" class="space-y-4" data-netlify="true" name="contact">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="mt-1 w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-lime-400 focus:ring focus:ring-lime-200 focus:ring-opacity-50 transition-all"
              placeholder="お名前"
            />
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="mt-1 w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-lime-400 focus:ring focus:ring-lime-200 focus:ring-opacity-50 transition-all"
              placeholder="返信先メールアドレス"
            />
          </div>
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
            <textarea
              id="message"
              name="message"
              required
              rows="4"
              class="mt-1 w-full px-4 py-3 rounded-lg border border-gray-300 focus:border-lime-400 focus:ring focus:ring-lime-200 focus:ring-opacity-50 transition-all"
              placeholder="お問い合わせ内容を記入してください"
            ></textarea>
          </div>
          <button
            type="submit"
            class="bg-lime-300 shadow-sm text-gray-800 px-8 py-3 rounded-full font-semibold hover:bg-lime-400 transition-all transform w-full"
          >
            送信する
          </button>
        </form>
    </div>
  </div>
</section>