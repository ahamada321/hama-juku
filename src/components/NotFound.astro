---
import TableAbsolute from './TableAbsolute.astro';

interface Props {
  title?: string;
  description?: string;
  ctaText?: string;
  ctaLink?: string;
}

const { 
  title = 'Page Not Found!',
  description = "It looks like the page you're looking for doesn't exist or has been moved. Let's get you back on track!",
  ctaText = 'Return to Homepage',
  ctaLink = '/',
} = Astro.props;
---

<section id="not-found" class="relative bg-gray-100 border-b border-black/10 pt-24 pb-12 flex flex-col items-center justify-center overflow-hidden">
    <TableAbsolute />
    <div class="lg:max-w-7xl mx-auto px-6 relative text-center">
    <div class="relative max-w-3xl mx-auto py-12">
      <h1 class="text-4xl md:text-5xl font-semibold mb-4 text-black leading-tight md:leading-tight">
        {title}
      </h1>
      <p class="text-xl md:text-2xl text-gray-700 max-w-2xl mx-auto mb-8">
        {description}
      </p>
      <a
        href={ctaLink}
        class="bg-lime-300 shadow-sm text-gray-800 px-8 py-4 rounded-full font-semibold hover:bg-lime-400 transition-all transform inline-block"
      >
        {ctaText}
      </a>
    </div>
  </div>
</section>