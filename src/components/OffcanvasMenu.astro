---
export interface MenuItem {
  label: string;
  href: string;
}

export interface OffcanvasMenuProps {
  menuItems: MenuItem[];
  footerText: string;
}

const offcanvasData: OffcanvasMenuProps = {
  menuItems: [
    { label: 'ホーム', href: '/' },
    { label: '受講生専用ページ', href: 'https://hama-juku.thinkific.com/enrollments' },
    /*{ label: 'ブログ記事', href: '/blog' },*/
    { label: 'ご質問・お問い合わせはこちら', href: '/contact' },
  ],
  footerText: `© ${new Date().getFullYear()} ハマ塾 | All rights reserved.`,
};
---

<div id="offcanvasOverlay" class="fixed inset-0 bg-black/50 z-40 opacity-0 invisible transition-all duration-300 ease-in-out"></div>
<div id="offcanvasMenu" class="fixed top-0 right-0 h-screen overflow-y-auto scrollbars w-80 flex flex-col max-w-full bg-white/95 backdrop-blur-md shadow-2xl transform translate-x-full transition-transform duration-300 ease-in-out z-50">
  <div class="relative flex items-center justify-center px-4 py-2 border-b border-black/10">
    <h2 class="font-light text-gray-500">Menu</h2>
    <button id="closeOffcanvas" class="absolute right-3 top-2 size-8 flex items-center justify-center text-gray-600 hover:text-red-600 transition duration-300">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8"/>
      </svg>
    </button>
  </div>
  <nav class="relative py-3">
    <div class="flex flex-col">
      {offcanvasData.menuItems.map((item) => (
        <a
          href={item.href}
          class="text-gray-600 hover:text-lime-600 hover:bg-gray-100 block px-6 py-3 rounded-md text-lg font-medium transition duration-300"
        >
          {item.label}
        </a>
      ))}
    </div>
  </nav>
  <div class="relative mt-auto py-3">
    <p class="text-sm text-gray-500 text-center">{offcanvasData.footerText}</p>
  </div>
</div>

<!-- JavaScript -->
<script src="../scripts/offcanvasMenu.js"></script>