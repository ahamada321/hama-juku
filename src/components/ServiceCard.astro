---
export interface ServiceCardProps {
  title: string;
  description: string;
  iconSvg: string;
}

interface ServiceCardData {
  service: ServiceCardProps;
}

const { service } = Astro.props as ServiceCardData;
---

<div class="rounded-3xl bg-white hover:bg-lime-100 p-6 border border-black/10 transition-all transform hover:-translate-y-2">
  <div class="w-12 h-12 mb-4 bg-lime-200 text-lime-800 rounded-full flex items-center justify-center shadow-sm">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-6 w-6"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      set:html={service.iconSvg}
    />
  </div>
  <h3 class="text-xl font-semibold text-black mb-2">{service.title}</h3>
  <p class="text-gray-600">{service.description}</p>
</div>