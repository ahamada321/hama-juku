---
export interface Tool {
  name: string;
  proficiency: number;
}

export interface AboutSectionProps {
  name: string;
  description: string;
  tools: Tool[];
  profileImg: string;
  screenImg: string;
  title: string;
  href: string;
  availability: boolean;
}

const aboutData: AboutSectionProps = {
  name: 'ハマ塾の「本当の強み」',
  description:
    'ハマアツ自身、投資で安定する迄かなり遠回りしました。でも気づいたんです。体系化された授業があって、続けられる仕組みがあり、日報フィードバックもあれば、もっと早く結果にたどり着けたんじゃないかって。途中で挫折してしまった人も、こういった環境があれば結果まで辿り着けてたかもしれない。それを具現化にしたのがハマ塾です。(※日報フィードバック等は【フル版】のみ)',
  tools: [
    { name: '基礎知識の習得率', proficiency: 85 },
    { name: '投資成績マイナスからの脱出率', proficiency: 70 },
    { name: 'ハマ塾生の継続率', proficiency: 65 },
    { name: '月利利回り3%以上達成率', proficiency: 55 },
  ],
  profileImg: '/img/profile.jpg',
  screenImg: '/img/screen.jpg',
  title: 'ハマ塾 フル版はこちら',
  href: '#cta',
  availability: true,
};
---

<section id="about" class="relative bg-white border-y border-black/10 py-16 md:py-20 overflow-hidden">
  <div class="lg:max-w-7xl mx-auto px-6">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <div class="max-lg:order-2 flex flex-col">
        <h2 class="text-3xl md:text-4xl font-semibold text-black mb-3">{aboutData.name}</h2>
        <p class="text-gray-700 text-lg mb-4">{aboutData.description}</p>
        <div class="relative">
          <h4 class="text-lg font-semibold text-black mb-4">パフォーマンス内訳</h4>
          <div class="space-y-4 text-gray-700">
            {aboutData.tools.map((tool) => (
              <div class="relative">
                <div class="flex justify-between text-sm mb-1">
                  <span class="font-medium">{tool.name}</span>
                  <span>{tool.proficiency}%</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-3">
                  <div
                    class="bg-lime-400 h-3 rounded-full"
                    style={`width: ${tool.proficiency}%`}
                  ></div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
      <div class="max-lg:order-1 max-lg:mb-4 flex flex-col lg:ps-8">
        <div class="order-2 flex items-center justify-center">
          <div class="relative">
            <div class="-mt-3 w-12 h-10 bg-gradient-to-b from-gray-900 to-black shadow-lg mx-auto border-x border-gray-300"></div>
            <div class="w-40 h-5 bg-gradient-to-b from-black to-gray-900 shadow-lg rounded-t-lg mx-auto"></div>
          </div>
        </div>
        <a href={aboutData.href} data-scroll="smooth">
          <div class="order-1 relative w-full rounded-xl border-[8px] border-black aspect-video overflow-hidden flex flex-col items-center justify-center">
            <img
              src={aboutData.screenImg}
              alt="Screen App"
              class="absolute top-0 inset-x-0 w-full"
            />
            <div class="absolute inset-0 bg-black/60"></div>
            <div class="relative size-20 sm:size-24 rounded-full overflow-hidden bg-white border-2 border-white mb-2">
              <img src={aboutData.profileImg} alt={aboutData.name} class="w-full">
            </div>

            {aboutData.availability && (
            <div class="relative flex items-center justify-center gap-2 mb-1">
              <div class="size-3 bg-lime-500 rounded-full animate-pulse"></div>
              <span class="text-sm text-white">最も結果が出しやすい</span>
            </div>
            )}
            <h3 class="text-xl md:text-2xl font-semibold text-white relative">
              {aboutData.title}
            </h3>
          </div>
        </a>
        <h3 class="about-perspective order-3 mt-6 text-6xl text-center font-semibold text-gray-400 uppercase">
          ABOUT ハマ塾
        </h3>
      </div>
    </div>
  </div>
</section>