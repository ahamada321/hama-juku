---
import BlogCard from './BlogCard.astro';
import type { BlogPost } from '@src/data/BlogItems';

interface Props {
  post: BlogPost;
  relatedPosts: BlogPost[];
}

const { post, relatedPosts } = Astro.props;
---

<section id="blog-detail" class="relative bg-gray-100 pb-16 pt-24 md:pt-32 overflow-hidden">
  <div class="lg:max-w-6xl mx-auto px-6 lg:px-16">
    <!-- Heading -->
    <div class="text-start md:text-center mb-6">
      <h1 class="text-4xl md:text-5xl font-semibold text-black">{post.title}</h1>
      <p class="text-gray-600 mt-3">Published: {post.publishedDate}</p>
    </div>
    <!-- Post Content -->
    <div class="sm:bg-white sm:rounded-3xl sm:border sm:border-black/10 sm:shadow-lg mb-12">
      <img src={post.image} alt={post.alt} class="w-full h-auto rounded-xl" />
      <div class="sm:px-8 pt-6 sm:pb-8 post-content" set:html={post.content} />
    </div>
    <!-- Related Articles -->
    <div class="flex flex-col gap-6">
      <h3 class="text-2xl md:text-3xl font-semibold">Related Posts</h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {relatedPosts.map((relatedPost) => (
          <BlogCard
            slug={relatedPost.slug}
            title={relatedPost.title}
            excerpt={relatedPost.excerpt}
            image={relatedPost.image}
            alt={relatedPost.alt}
          />
        ))}
      </div>
    </div>
  </div>
</section>