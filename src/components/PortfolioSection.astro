  title: string;
  category: string;
  description: string;
  srcImg: string;
  href: string;
}

export interface PortfolioSectionProps {
  title: string;
  portfolios: PortfolioItem[];
  trustedBy: { src: string; alt: string }[];
  title2: string;
  portfolios2: PortfolioItem[];
}

const portfolioData: PortfolioSectionProps = {
  title: '① 基礎コース',
  portfolios: [
    {
      id: 1,
      title: "つみたて新NISA入門",
      category: "基礎知識 (詳細を見る)",
      description: "つみたて投資枠に最適なインデックス投資の考え方を学び、実際に積立投資を開始しましょう",
      srcImg: "/img/project1.jpg",
      href: "https://www.udemy.com/course/how-to-invest-in-index-funds/?referralCode=519E379A25FE9C507B55",
    },
    {
      id: 2,
      title: "TradingView入門",
      category: "基礎知識 (詳細を見る)",
      description: "トレーディングビューを知識ゼロから実践レベルまで一気に使えるようになります",
      srcImg: "/img/project2.jpg",
      href: "https://www.udemy.com/course/tradingview-for-beginners/?referralCode=55F51D6982BDD05B13A2",
    },
    {
      id: 3,
      title: "テクニカル分析入門",
      category: "基礎知識 (詳細を見る)",
      description: "ヘッドアンドショルダーや水平線の引き方などの基礎を学び、実践で使える知識を養います",
      srcImg: "/img/project3.jpg",
      href: "https://www.udemy.com/course/technical-analysis-course-for-beginners/?referralCode=8434912DAA3A907E9C7F",
    },
    {
      id: 4,
      title: "出来高入門",
      category: "基礎知識 (詳細を見る)",
      description: "出来高・価格帯別出来高・出来高加重平均 (VWAP)を学び、エントリー/利確精度を高めます",
      srcImg: "/img/project4.jpg",
      href: "https://www.udemy.com/course/volume-trading/?referralCode=E8F35D826AEF6F3658F9",
    },
  ],
  trustedBy: [
    { src: '/img/logo1.png', alt: 'Company 1' },
    { src: '/img/logo2.png', alt: 'Company 2' },
    { src: '/img/logo3.png', alt: 'Company 3' },
    { src: '/img/logo4.png', alt: 'Company 4' },
  ],
  title2: '② 勝つための環境整備',
  portfolios2: [
    {
      id: 5,
      title: "TradingView応用",
      category: "環境整備 (詳細を見る)",
      description: "無料機能に制限せず、実践で勝つために必要なノウハウを学びます",
      srcImg: "/img/project5.jpg",
      href: "https://hama-juku.thinkific.com/products/courses/tradingview-premium-course",
