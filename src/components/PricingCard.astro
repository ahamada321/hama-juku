---
interface Props {
  title: string;
  price: string;
  period: string;
  description: string;
  features: string[];
  icon: string;
  ctaText: string;
  ctaLink: string;
}

const { title, price, period, description, features, icon, ctaText, ctaLink } = Astro.props;
---

<div
  class="relative rounded-3xl bg-white hover:bg-lime-100 p-6 md:p-8 border border-black/10 transition-all transform hover:-translate-y-2 shadow-lg overflow-hidden"
>
  <div class="absolute right-3 top-3 text-lime-500/50 flex items-center justify-center">
    <svg xmlns="http://www.w3.org/2000/svg" class="size-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon} />
    </svg>
  </div>
  <h3 class="text-xl md:text-2xl font-semibold text-black mb-2">{title}</h3>
  <p class="text-3xl md:text-4xl font-bold text-black mb-4">
    {price}<span class="text-sm text-gray-600">{period}</span>
  </p>
  <p class="text-gray-600 mb-4">{description}</p>
  <ul class="text-gray-600 space-y-2.5 mb-6">
    {features.map((feature) => (
      <li class="flex items-center gap-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 text-lime-400"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        {feature}
      </li>
    ))}
  </ul>
  <a
    href={ctaLink}
    class="flex items-center justify-center gap-2 bg-lime-300 shadow-sm text-gray-800 px-6 py-3 rounded-full font-semibold hover:bg-lime-400 transition-all transform w-full text-center"
  >
    {ctaText}
  </a>
</div>