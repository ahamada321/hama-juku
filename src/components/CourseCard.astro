---
interface Props {
  slug: string;
  title: string;
  excerpt: string;
  image: string;
  alt: string;
}

const { slug, title, excerpt, image, alt } = Astro.props;
const icon = 'M9 5l7 7-7 7';
---

<div
  class="rounded-3xl bg-white hover:bg-lime-100 border border-black/10 shadow-lg overflow-hidden transition-all transform hover:-translate-y-2"
>
  <a href={`/course/${slug}`}>
    <img src={image} alt={alt} class="w-full object-cover" />
  </a>
  <div class="p-6">
    <a href={`/course/${slug}`}>
      <h3 class="text-xl font-semibold text-black mb-2">{title}</h3>
    </a>
    <p class="text-gray-600 mb-4">{excerpt}</p>
    <a
      href={`/course/${slug}`}
      class="text-lime-600 hover:text-lime-500 font-semibold text-sm transition-colors flex items-center gap-2"
    >
      Read More
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-4 w-4"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon} />
      </svg>
    </a>
  </div>
</div>