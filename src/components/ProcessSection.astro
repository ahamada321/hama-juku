---

<section id="process" class="relative bg-white py-16 md:py-20 overflow-hidden">
  <div class="lg:max-w-7xl mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-semibold text-black">{title}</h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto mt-3">{description}</p>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {steps.map((step) => (
        <div
          class="rounded-3xl bg-gray-100 hover:bg-lime-100 p-6 border border-black/10 transition-all transform hover:-translate-y-2"
        >
          <div
            class="w-12 h-12 mb-4 bg-lime-200 text-lime-800 rounded-full flex items-center justify-center shadow-sm"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={step.icon} />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-black mb-2">{step.step}</h3>
          <p class="text-gray-600">{step.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>