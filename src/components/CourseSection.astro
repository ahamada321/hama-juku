---
import CourseCard from './CourseCard.astro';

interface CoursePost {
  slug: string;
  title: string;
  excerpt: string;
  image: string;
  alt: string;
  subtitle: string;
  content: string;
  categories: string[];
}

interface Props {
  posts: CoursePost[];
  currentPage: number;
  totalPages: number;
  baseUrl: string;
}

const { posts } = Astro.props;
---

<section id="courses" class="relative bg-white/70 backdrop-blur-md pt-2 md:pt-4 overflow-hidden">
  <div class="text-center mb-12">
    <h2 class="text-3xl md:text-4xl font-semibold text-black whitespace-nowrap">
      次のステップ
    </h2>
  </div>
  <div class="lg:max-w-7xl mx-auto px-6">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {posts.map((post) => (
        <CourseCard
          slug={post.slug}
          title={post.title}
          excerpt={post.excerpt}
          image={post.image}
          alt={post.alt}
        />
      ))}
    </div>
  </div>
</section>