---
import Layout from '@src/layouts/Layout.astro';
import { blogPosts } from '@src/data/BlogItems';

const categories = Array.from(new Set(blogPosts.flatMap((post) => post.categories)));
---

<Layout title="Categories - Craftpixel">
  <section class="relative bg-white/70 backdrop-blur-md py-16 md:py-20 overflow-hidden">
    <div class="lg:max-w-7xl mx-auto px-6">
      <div class="text-center mb-12">
        <h1 class="text-3xl md:text-4xl font-semibold text-black">Blog Categories</h1>
        <p class="text-gray-600 max-w-2xl mx-auto mt-3">Explore our blog posts by category.</p>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {categories.map((category) => (
          <a
            href={`/blog/category/${category}`}
            class="rounded-3xl bg-white hover:bg-lime-100 border border-black/10 shadow-lg p-6 text-center font-semibold text-black hover:text-lime-600 transition-all"
          >
            {category.charAt(0).toUpperCase() + category.slice(1).replace('-', ' ')}
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>